<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".CategoryItemsActivity">


        <androidx.coordinatorlayout.widget.CoordinatorLayout

            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"


            >

                <com.google.android.material.appbar.AppBarLayout

                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stateListAnimator="@null"
                android:elevation="0dp">

                <!--custom tool bar below-->
                <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"

                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:padding="4dp"
                android:gravity="center_vertical"
                android:elevation="0dp"
                android:visibility="visible"

                app:layout_scrollFlags="scroll|enterAlways|snap"
                >

                <ImageButton
                android:id="@+id/id_fr_menu_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_gravity="left"
                app:srcCompat="@drawable/menu"
                android:scaleType="centerCrop"
                android:background="@null"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"

                />

                <ImageButton
                android:id="@+id/id_fr_my_cart_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/shopping_cart2"
                android:scaleType="centerCrop"
                android:background="@null"
                android:layout_marginRight="15dp"
                />

                <ImageButton
                android:id="@+id/id_fr_notification_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_gravity="right"
                app:srcCompat="@drawable/bell"
                android:scaleType="centerCrop"
                android:background="@null"
                android:layout_marginRight="15dp"
                />

                </androidx.appcompat.widget.Toolbar>


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">
                <TextView
                android:id="@+id/id_fr_tv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textColor="#A60C0C0C"
                android:layout_gravity="center"
                android:textSize="28sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"

                android:ellipsize="end"
                android:maxLines="1"
                />
                </LinearLayout>

                <LinearLayout
                android:id="@+id/id_fr_ll_fr_directory_tvs"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal"
                android:animateLayoutChanges="true"
                android:layout_marginTop="4dp">

                <TextView
                android:id="@+id/id_fr_tv_catgr_directory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:text="Category"
                android:textAllCaps="false"
                android:textColor="#A60C0C0C"
                android:textSize="17sp"

                android:textStyle="italic" />
                <TextView
                android:id="@+id/id_fr_tv_first_slash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:textColor="#A60C0C0C"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                />
                <TextView
                android:id="@+id/id_fr_tv_sub_catgr_directory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sub-Category"
                android:textColor="#A60C0C0C"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:paddingLeft="5dp"
                android:textStyle="italic"
                />

                <TextView
                android:id="@+id/id_fr_tv_scnd_slash"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingLeft="5dp"
                android:text="/"
                android:textColor="#A60C0C0C"
                android:textSize="17sp"
                android:textStyle="italic"

                />
                <TextView
                android:id="@+id/id_fr_tv_sub_sub_catgr_directory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Sub-Sub-Category"
                android:textColor="#A60C0C0C"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:paddingLeft="5dp"
                android:textStyle="italic"

                />
                </LinearLayout>

                </com.google.android.material.appbar.AppBarLayout>


                <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/id_fr_recycler_view_ctgr_items_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="4dp"

                android:paddingLeft="50dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"



                />
                <LinearLayout
                    android:id="@+id/container_fr_ctgr"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#80C96E"

                    android:paddingLeft="6dp"
                    android:paddingTop="0dp"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior">




                </LinearLayout>






        </androidx.coordinatorlayout.widget.CoordinatorLayout>



</RelativeLayout>