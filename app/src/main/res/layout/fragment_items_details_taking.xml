<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_gradient3_fr_item_detail_taking_frag"
    android:fitsSystemWindows="true"

    tools:context=".ItemsDetailsTakingFragment.View.ItemsDetailsTakingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background=" @color/colorTransparent"
                android:minHeight="?attr/actionBarSize"

                android:padding="4dp"
                android:gravity="center_vertical"
                android:elevation="0dp"
                android:visibility="visible"
                >
                <ImageButton
                    android:id="@+id/id_fr_menu_bt"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="10dp"
                    android:layout_gravity="left"
                    app:srcCompat="@drawable/menu"
                    android:scaleType="centerCrop"
                    android:background="@null"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"

                    />
                <Button
                    android:id="@+id/bt_upload_data"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_button_border"
                    android:text="Upload"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="right"
                    />
            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Details for the product U want to sell" />
            <!--Overlapping in Cooordinator layout-
            Th overlapping of views ,like in relative layout ,the view
            added last appears on top.The same thing is in coordinator
            layout ONLY IN THE CASE WHERE EACH CHILD VIEW HAS
            SAME ELEVATION othervise no matter the order the child view
             which has the highest elevation will be overlapping others.

             this is the reason why I have put the below
             form cardview inside the Linearlayout because otherwise
             it was overlapping the bottomsheet dialog-->


            <androidx.cardview.widget.CardView
                android:id="@+id/cv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginLeft="15dp"
                android:layout_marginTop="150dp"

                android:layout_marginRight="15dp"
                android:elevation="10dp"
                app:cardCornerRadius="10dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Images for the Product(Max 5)." />


                    <HorizontalScrollView
                        android:id="@+id/id_fr_horizontal_scrll_view"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginTop="40dp"
                        android:background="#AAA5A5"
                        android:padding="10dp">

                        <LinearLayout
                            android:id="@+id/ll_container_fr_ivs"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="horizontal"

                            >


                            <ImageView
                                android:id="@+id/id_fr_slected_image_1"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/id_fr_slected_image_2"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/id_fr_slected_image_3"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/id_fr_slected_image_4"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/id_fr_slected_image_5"
                                android:layout_width="140dp"
                                android:layout_height="140dp"
                                android:visibility="gone" />

                            <Button
                                android:id="@+id/id_fr_bt_choose_images"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:text="choose images" />
                        </LinearLayout>
                    </HorizontalScrollView>
<!--============================================================-->
                    <EditText
                        android:id="@+id/ed_name_of_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name" />

                    <EditText
                        android:id="@+id/ed_price_of_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Item Price in Rs."
                        android:inputType="number"/>

                    <EditText
                        android:id="@+id/ed_descrp_of_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description" />

                    <!--===============below layout is for ctgr section==================-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:animateLayoutChanges="true"
                        android:background="@color/colorSecondary"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:animateLayoutChanges="true"
                            android:orientation="horizontal">

                            <ImageButton
                                android:id="@+id/id_fr_bt_bottom_sheet_back"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_clear" />

                            <TextView
                                android:id="@+id/id_br_bottom_sheet_tv_header"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="30dp"
                                android:gravity="center_vertical"
                                android:text="Select a Category"
                                android:textColor="#fff"
                                android:textSize="22sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--<ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        >-->

                    <LinearLayout
                        android:id="@+id/container_fr_ctgr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorSecondary"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                    </LinearLayout>
                    <!-- </ScrollView>-->

                    <!--===============below layout is for varietry gving faciilty section==================-->
                    <LinearLayout
                        android:id="@+id/container_fr_variety_giving_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical"
                        android:paddingBottom="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvHeader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Add variety" />
                            <!--below bt is for info about this feature-->
                            <ImageButton
                                android:id="@+id/bt_show_btm_sheet_fr_info"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tvHeader" />

                            <Button
                                android:id="@+id/btAddVarity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:text="SHOW" />
                        </RelativeLayout>

                        <EditText
                            android:id="@+id/ed_name_of_variety"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name of Variety ,like shoe no or Shirt size"
                            android:visibility="gone" />

                        <LinearLayout
                            android:id="@+id/container_for_varieties"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btAdd_indivisual_variety"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="Add"
                            android:visibility="gone" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="6dp"

                        >

                        <TextView
                            android:id="@+id/tv_visiblity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Visibilty" />
                        <!--below bt is for info about this feature-->
                        <ImageButton
                            android:id="@+id/ibt_show_bttm_sheet_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/tv_visiblity" />

                        <Button
                            android:id="@+id/bt_show_or_hide"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="Show" />


                    </RelativeLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>


    <!--=========================BottomSheet Container===========================-->

    <!--background dimmer view-->

    <!--below cooordinatorlayout id for bootomsheet to inflate-->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/cl_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/touch_to_dismiss_bottom_sheet_dim_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#9000"
            android:clickable="true"
            android:visibility="gone" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>