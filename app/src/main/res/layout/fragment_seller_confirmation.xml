<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/ll_root_frgm_seller_cnfrm"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerConfirmationFragment"
android:background="@color/colorPrimary"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/iv_center"
        android:layout_width="500dp"
        android:layout_height="250dp"

        android:layout_weight="1"


        android:layout_gravity="left"


        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="-40dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/bg_gradient2_fr_seller_confirm_frag"
        android:rotation="150"
        />
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background=" @color/colorTransparent"
        android:minHeight="?attr/actionBarSize"

        android:padding="4dp"
        android:gravity="center_vertical"
        android:elevation="0dp"
        android:visibility="visible"
        >
    <ImageButton
        android:id="@+id/id_fr_menu_bt"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:layout_gravity="left"
        app:srcCompat="@drawable/menu"
        android:scaleType="centerCrop"
        android:background="@null"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"

        /></androidx.appcompat.widget.Toolbar>


    <ImageView
        android:id="@+id/iv_bottom_right"
        android:layout_width="250dp"
        android:layout_height="250dp"

        android:layout_weight="1"

        android:rotation="5"
        android:padding="10dp"
        android:layout_gravity="left"
        android:src="@drawable/ic_img_delivery_svg"
        android:scaleType="centerCrop"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="-40dp"
        android:layout_marginLeft="-40dp"
        android:alpha=".6"
        />
    <TextView
        android:id="@+id/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:fontFamily="@font/adamina"
        android:paddingLeft="15dp"
        android:paddingTop="30dp"
        android:paddingRight="15dp"
        android:text="Become A Seller  on ML Pec"
        android:textAlignment="textStart"
        android:textColor="#000"
        android:textSize="35sp"

        android:layout_below="@id/toolbar"
        />

    <TextView
        android:id="@+id/subHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Have The Following Available"
        android:textAlignment="viewStart"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorGrayForHeaderTvs"
       android:layout_below="@id/Header"
        />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/subHeader"
    android:layout_marginTop="20dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_shop_svg"
            android:scaleType="centerInside"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:textSize="20dp"
android:textColor="@color/colorBlackForSubHeaderTvs"
            android:text="Business Name and Address"
android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:textSize="20dp"
            android:textColor="@color/colorBlackForSubHeaderTvs"
            android:text="Mobile or Telephone No"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
android:layout_weight="1"
            android:src="@drawable/ic_phone_svg"
            android:scaleType="centerInside"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="90dp"
android:layout_weight="1"
            android:src="@drawable/ic_bank_svg"
            android:scaleType="centerInside"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/adamina"
            android:textSize="20dp"
            android:textColor="@color/colorBlackForSubHeaderTvs"
            android:text="Valid Bank Account"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/adamina"
                android:textSize="20dp"
                android:textColor="@color/colorBlackForSubHeaderTvs"
                android:text="Tax Information"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:src="@drawable/ic_tax_svg"
                android:scaleType="centerInside"

                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>

</ScrollView>

   <!--===================bottom button work-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:padding="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button"
            android:text="Submit docs"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_weight="1"

            android:layout_marginRight="5dp"
            />

        <Button
            android:id="@+id/bt_later"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_border"
            android:text="Later"
            android:textColor="@color/colorSecondary"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

</RelativeLayout>