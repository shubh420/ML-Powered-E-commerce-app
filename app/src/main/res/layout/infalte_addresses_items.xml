<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_container_of_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
android:layout_toLeftOf="@id/iv_ctgr_indicator"
        >

        <TextView
            android:id="@+id/tvRecieverName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorLightGrayForSubHeaderTvs"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvAreaStateCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="@color/colorLightGrayForSubHeaderTvs"

            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvHouseNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Area"
            android:textColor="@color/colorLightGrayForSubHeaderTvs"

            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_ctgr_indicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
        android:padding="2dp"
        android:layout_margin="5dp"
        android:tint="#858080"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        />
</RelativeLayout>


